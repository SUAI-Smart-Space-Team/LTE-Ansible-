pipeline {
    agent {
       label "deploy"
    }
    stages {
          stage("connect") {
             steps {
               script {
                   sh '''
                   make image VERSION=lte_ansible BRANCH=null FILE=./Dockerfile 
                   chmod +x ./cve.sh
                   sudo docker run -i --rm -v $(pwd)/cve.sh:/cve.sh --entrypoint="/cve.sh" smartspace/storage:lte_ansible
                   ''' 
               }
             }
          }
        }
}
